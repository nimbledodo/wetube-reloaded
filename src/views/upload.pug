extends base

block content 
    div 
        video#preview
        button#actionBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video") 
        //-id는 for를 위한 것, name은 multer를 위한 것
        label(for="thumb") Thumbnail File
        input(type="file", accept="image/*", required, id="thumb", name="thumb") 
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma.",type="text", name="hashtags")
        input(type="submit",value="Upload Video")

block scripts
    script(src="/assets/js/recorder.js")